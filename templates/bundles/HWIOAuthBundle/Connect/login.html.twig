{% extends '@HWIOAuth/layout.html.twig' %}

{% block hwi_oauth_content %}
<div class="container">
    <div class="mt-3">
        {% if error is defined and error %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}
        <a href="{{ hwi_oauth_login_url('google') }}" class="btn btn-primary btn-lg active">Google Login</a>
        <a href="#" class="btn btn-secondary btn-lg disabled">GitHub Login</a>
        <a href="#" class="btn btn-secondary btn-lg disabled">Twitter Login</a>
    </div>
</div>
{% endblock hwi_oauth_content %}
